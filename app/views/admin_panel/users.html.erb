<div class="banner-header bg-white p-3">
  <div class="row align-items-center">
    <div class="col-md-6 text-center text-md-left mb-2 mb-md-0">
      <h5 class="">All Users</h5>
     <%= render_breadcrumbs %>
    </div>
    <div class="col-md-6 text-center text-md-right">
      <a href="/users/invitation/new" class="btn btn-primary">Invite Users</a>
    </div>
  </div>
</div>
<div class="container container-admin px-md-4 px-2 container-s">
  <div class="card p-4 rounded-0">
    <div class="table-responsive table-users">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Account Created On</th>
            <th>Access</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name.present? ? user.name : 'Not Provided' %></td>
              <td><%= user.email %></td>
              <td><%= user.phone_number.present? ? user.phone_number : 'Not Provided' %></td>
              <td><%= user.created_at.strftime('%d/%B/%Y at %I:%M %p') %></td>
              <td>
                <% if user.revoke_access == false %>
                  <center><%= link_to 'Disable', change_access_path(disable: user.id) %></center>
                <% else %>
                  <center><%= link_to 'Enable', change_access_path(enable: user.id) %></center>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>