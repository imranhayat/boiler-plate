<div class="page-center">
  <div class="card mw-1000">
    <div class="card-header">
      Multi-Submit Multi-Step Form
    </div>
    <div class="card-body">
      <%= render 'steps_heading', h1:'active', h2:'', h3:'', h4:'', h5:'' %>
      <form action="/multisubmit_multistep_step_2">
        <div class="form-row row-cols-1 row-cols-sm-2">
          <div class="form-group form-floating col">
            <input type="email" id="email" required>
            <label for="email">Email</label>
          </div>
          <div class="form-group form-floating col">
            <input type="password" id="password" minlength="6" required>
            <label for="password">Password</label>
          </div>
          <div class="form-group form-floating col">
            <input type="tel" id="phone" maxlength="14" pattern="\(\d{3}\)[ ]?\d{3}[-]?\d{4}" required>
            <label for="phone">Phone</label>
          </div>
          <div class="form-group form-floating col">
            <input type="url" id="website" required>
            <label for="website">Website</label>
          </div>
        </div>
        <div class="d-flex justify-content-end form-buttons">
          <button type="submit" class="btn btn-primary">Next<i class="fas fa-arrow-right ml-2"></i></button>
        </div>
      </form>
    </div>
  </div>
</div>