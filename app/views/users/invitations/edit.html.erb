<div class="devise-container">
  <div class="card">
    <div class="card-body">
      <h3 class="text-center"><%= t "devise.invitations.edit.header" %></h3>
      <hr/>
      <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :invitation_token, readonly: true %>
          <% if f.object.class.require_password_on_accepting %>
            <div class="form-group form-floating">
              <%= f.text_field :name, autofocus: true, placeholder: 'Enter Your Name', required: true %>
              <label for="user_name">Enter Your Name</label>
            </div>
            <div class="form-group form-floating">
              <%= f.password_field :password, placeholder: 'Enter Your Password', required: true %>
              <label for="user_password">Enter Your Password</label>
            </div>
            <div class="form-group form-floating">
              <%= f.password_field :password_confirmation, placeholder: 'Confirm Your Password', required: true %>
              <label for="user_password_confirmation">Confirm Your Password</label>
            </div>
          <% end %>
        <%= f.submit t("devise.invitations.edit.submit_button") %>
      <% end %>
      <div class="text-center mt-3">
        <p>Already a member? <%= link_to "Login", new_session_path(resource_name) %></p>
      </div>
    </div>
  </div>
</div>