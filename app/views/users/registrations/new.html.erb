<div class="devise-container">
  <div class="card">
    <div class="card-body">
      <h3 class="text-center">Join YourAppName</h3>
      <hr/>
      <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn-facebook"><i class="fab fa-facebook-f mr-2"></i> Join with Facebook</a>
      <a href="<%= user_google_oauth2_omniauth_authorize_path %>" class="btn-google"><i class="fab fa-google mr-2"></i> Join with Google</a>
      <div class="row align-items-center no-gutters my-2">
        <div class="col-5">
          <hr/>
        </div>
        <div class="col-2 text-center">
          OR
        </div>
        <div class="col-5">
          <hr/>
        </div>
      </div>
      <% if session['devise.facebook_data'].present? %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group form-floating">
            <%= f.email_field :email, autofocus: true, placeholder: "Enter Your Email" %>
            <label for="user_email">Enter Your Email</label>
          </div>
          <%= f.submit "Sign up", class: "btn-submit" %>
        <% end %>
      <% else %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group form-floating">
            <%= f.text_field :name, autofocus: true, required: true, placeholder: 'Enter Your Name' %>
            <label for="user_name">Enter Your Name</label>
          </div>
          <div class="form-group form-floating">
            <%= f.email_field :email, placeholder: 'Enter Your Email', required: true %>
            <label for="user_email">Enter Your Email</label>
          </div>
          <div class="form-group form-floating">
            <%= f.password_field :password, required: true, placeholder: 'Enter Your Password', minlength: 6 %>
            <label for="user_password">Enter Your Password</label>
          </div>
          <div class="form-group form-floating">
            <%= f.password_field :password_confirmation, required: true, placeholder: 'Enter Your Password Again', minlength: 6 %>
            <label for="user_password_confirmation">Enter Your Password Again</label>
          </div>
          <%= f.submit "Sign Up", class: 'btn-submit' %>
        <% end %>
      <% end %>
      <div class="text-center mt-3">
        <p>Already a member? <%= link_to "Login", new_session_path(resource_name) %></p>
      </div>
    </div>
  </div>
</div>