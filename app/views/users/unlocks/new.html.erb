<div class="devise-container">
  <div class="card">
    <div class="card-body">
      <h3 class="text-center">Resend unlock instructions</h3>
      <hr/>
      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group form-floating">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter Your Email", required: true %>
          <label for="user_email">Enter Your Email</label>
        </div>
        <%= f.submit "Resend unlock instructions" %>
      <% end %>
      <div class="text-center mt-3">
        <p>Already a member? <%= link_to "Login", new_session_path(resource_name) %></p>
      </div>
    </div>
  </div>
</div>