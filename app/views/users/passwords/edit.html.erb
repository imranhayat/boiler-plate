<div class="page-center">
  <div class="card w-470">
    <div class="card-body">
      <h3 class="text-center">Change your password</h3>
      <hr/>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group form-floating">
          <%= f.password_field :password, placeholder: 'Enter New Password', required: true, minlength: 6 %>
          <label for="user_password">Enter New Password</label>
        </div>
        <div class="form-group form-floating">
          <%= f.password_field :password_confirmation, placeholder: 'Enter New Password Again', required: true, minlength: 6 %>
          <label for="user_password_confirmation">Enter New Password Again</label>
        </div>
        <%= f.submit "Change my password" %>
      <% end %>
      <div class="text-center mt-3">
        <p>Already a member? <%= link_to "Login", new_session_path(resource_name) %></p>
      </div>
    </div>
  </div>
</div>