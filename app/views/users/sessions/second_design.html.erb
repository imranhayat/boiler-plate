<div class="page-center">
  <div class="card w-470">
    <div class="card-body">
      <h3 class="text-center">Login to YourAppName</h3>
      <hr/>
      <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn-facebook"><i class="fab fa-facebook-f mr-2"></i> Login with Facebook</a>
      <a href="<%= user_google_oauth2_omniauth_authorize_path %>" class="btn-google"><i class="fab fa-google mr-2"></i> Login with Google</a>
      <div class="row align-items-center no-gutters my-2">
        <div class="col-5">
          <hr/>
        </div>
        <div class="col-2 text-center">
          OR
        </div>
        <div class="col-5">
          <hr/>
        </div>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group form-floating">
          <%= f.email_field :email, autofocus: true, placeholder: 'Enter Your Email', required: true %>
          <label for="user_email">Enter Your Email</label>
        </div>
        <div class="form-group form-floating">
          <%= f.password_field :password, placeholder: 'Enter Your Password', required: true, minlength: 6 %>
          <label for="user_password">Enter Your Password</label>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="form-group checkbox">
            <%= f.check_box :remember_me %>
            <label class="custom-control-label" for="user_remember_me">Remember me</label>
          </div>
        <% end -%>
        <%= f.submit "Login", class:'btn-submit' %>
      <% end %>
      <div class="text-center mt-3">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <hr/>
        <p>Not a member? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
      </div>
    </div>
  </div>
</div>