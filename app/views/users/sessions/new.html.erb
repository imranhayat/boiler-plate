<div class="container-fluid container-top py-4">
  <div class="container container-signin container-sign p-4">
    <div class="modal-login-body">  
      <h4 class="text-center mb-4">Log in YourAppName</h4>
      <a href="">
          <div class="loginmodal-fb mb-2">Login with Facebook</div>
      </a>
      <a href="">
          <div class="loginmodal-google mb-2"> Login with Google</div>
      </a>
      <div class="row">
          <div class="col-5"><hr class="hr-or"></div>
          <div class="col-2"><center>OR</center></div>
          <div class="col-5"><hr class="hr-or"></div>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: 'Email', class: 'form-control login-form', required: true %>
          </div>
          
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control login-form', required: true, minlength: 6 %>
          </div>
      
          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>
      
          <div class="actions">
            <%= f.submit "Log in", class: 'btn btn-primary btn-block mb-3' %>
          </div>
      <% end %>
      <center><%= link_to "Forgot your password?", new_password_path(resource_name) %></center>
      <center class="mt-4">Not a member? <%= link_to "Sign up", new_registration_path(resource_name) %></center>
    </div>
  </div>
</div>