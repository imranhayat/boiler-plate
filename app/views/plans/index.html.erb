<h1>Plans</h1>
<table>
  <thead>
    <tr>
      <th>Nickname</th>
      <th>Amount</th>
      <th>Currency</th>
      <th>Interval</th>
      <th>Interval count</th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.nickname %></td>
        <td><%= plan.amount %></td>
        <td><%= plan.currency %></td>
        <td><%= plan.interval %></td>
        <td><%= plan.interval_count.present? ? plan.interval_count : 'Not Available' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Plan', new_plan_path %>
